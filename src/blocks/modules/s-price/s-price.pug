.s-price(data-bg="url('img/general/prices-bg-1.webp'), url('img/general/prices-bg-2.webp')")
  picture.s-price__shield
    source(srcset=`${plshldr}`, data-srcset=`img/general/sheild-bg.webp` type="image/webp")
    img.header__bg-img(src=`${plshldr}` data-src=`img/general/sheild-bg.png`)
  .s-price__container
    .s-price__header
      +sect-header('Стоимость услуг индивидуальна<br/>и зависит от сложившейся ситуации')
    .s-price__subheader
      +sect-subheader('Чтобы уточнить стоимость, нужно детально ознакомиться с ситуацией')
    .s-price__delimeter
    .s-price__vars-title Предлагаем Вам <span class="text-back">&nbsp;2 варианта&nbsp;</span>
    .s-price__variants
      .s-price__var-block
        .s-price__var-block__inner
          h3.s-price__vb-header!= spvTitle1
          picture.s-price__vb-pic.s-price__vb-pic--left
            source(srcset=`${plshldrLeft}`, data-srcset=`${imgLeftwebp}` type="image/webp")
            img.header__bg-img(src=`${plshldrLeft}` data-src=`${imgLeftPng}`)
          p.s-price__description!= descr1
          .s-price__price
            .s-price__price-text Стоимость консультации: 7 тыс. руб.
          .s-price__suggestion
            span.text-back!= sugg1
          .s-price__button-wrapper
            +blue-btn('s-price__btn', 'Выбрать время и место', '', 's-price__button')
      .s-price__var-block.s-price__var-block--2
        .s-price__var-block__inner
          h3.s-price__vb-header!= spvTitle2
          picture.s-price__vb-pic.s-price__vb-pic--right
            source(srcset=`${plshldrRight}`, data-srcset=`${imgRightwebp}` type="image/webp")
            img.header__bg-img(src=`${plshldrRight}` data-src=`${imgRightPng}`)
          p.s-price__description!= descr2
          .s-price__suggestion
            span.text-back!= sugg2
          form(method="post" action="./sendmail/send.php").s-price__form
            .s-price__input
              +simple-input('Введите номер телефона', 'number', 's-price_phone')
            .s-price__button-wrapper
              +blue-btn-subm('s-price__btn-2', 'Заказать консультацию', '', 's-price__button-2', 'Заказать консультацию')
    .s-price__get-prices-wrapper
      a(href="").s-price__get-prices И все таки хочу знать ориентировочные цены